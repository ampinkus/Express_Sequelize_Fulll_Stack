<!-- Se renderiza el formulario con los datos de la tarea que se quiere modificar 
    en action="#" hay que incluir la ruta post para enviar a tabla projects los datos modificados
-->
<!-- Incluyo el header de Bootstrap -->
<%- include('../partials/head.ejs') %>
<!-- Incluyo la barra de navegaci贸n -->
<%- include('../partials/tasks/activeNav.ejs') %>

<!-- input form.  Note that the action is a POST request   -->
<div class="container pt-4 pb-2">
  <div class="row mb-3">
    <div class="col text-center">
      <h3> Modificaci贸n de la tarea: <%= task.name %></h3>
    </div>
    <div class="col-2 d-flex justify-content-around">
      <a
      href="/activeTasks" 
      type="button"
      class="btn btn-primary align-self-center">
      <i class="bi bi-arrow-90deg-up"></i> &nbsp Tareas Activos</a>

    </div>
  </div>
  <form
    class="row g-3 needs-validation"
    method="POST"
    action="/updateTask/<%= task.id %>"
    novalidate
  >
    <div class="col-4">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          value="<%= task.name %>"
          placeholder="Nombre"
          name="name"
        />
        <label for="floatingInput">Nombre</label>
      </div>
    </div>
    <div class="col-1">
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          id="floatingInput"
          value="<%= task.projectId %>"
          placeholder="Id del Proyecto"
          name="projectId"
        />
        <label for="floatingInput">Id Proyecto</label>
      </div>
    </div>
    <div class="col-7">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          value="<%= task.description %>"
          placeholder="Descripci贸n"
          name="description"
        />
        <label for="floatingInput">Descripci贸n</label>
      </div>
    </div>
    <!-- Use a new line -->
    <div class="col-12">
      <div class="form-floating mb-3">
        <input
          style="height: 200px;"
          type="text"
          class="form-control"
          id="floatingInput"
          value="<%= task.comment %>"
          placeholder="Comentarios"
          name="comment"
        />
        <label for="floatingInput">Comentarios</label>
      </div>
    </div>

    <div class="col-12 d-grid">
      <button class="btn btn-primary" type="submit">Modificar</button>
    </div>
  </form>
</div>
<!-- Incluyo el footer de Bootstrap -->
<%- include('../partials/foot.ejs') %>
