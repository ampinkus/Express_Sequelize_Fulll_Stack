<!-- Incluyo el header de Bootstrap -->
<%- include('../partials/head.ejs') %>
<!-- Incluyo la barra de navegaci贸n -->
<%- include('../partials/tasks/activeNav.ejs') %>

<!-- input form.  Note that the action is a POST request   -->
<div class="container pt-4 pb-2">
  <div class="row mb-3">
    <div class="col-10">
      <h2>Agregar Tarea</h2>
    </div>
    <div class="col-2 d-flex justify-content-around">
      <a
      href="/activeTasks" 
      type="button"
      class="btn btn-primary align-self-center">
      <i class="bi bi-arrow-90deg-up"></i> &nbsp Tareas Activas</a>

    </div>
  </div>
  <form
    class="row g-3 needs-validation"
    method="POST"
    action="/createTask"
    novalidate
  >
    <div class="col-4">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          value=""
          placeholder="Nombre"
          name="name"
        />
        <label for="floatingInput">Nombre</label>
      </div>
    </div>
    <div class="col-2">
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          id="floatingInput"
          value=""
          placeholder="Id Proyecto"
          name="projectId"
        />
        <label for="floatingInput">Id Proyecto</label>
      </div>
    </div>
    <div class="col-6">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          value=""
          placeholder="Descripci贸n"
          name="description"
        />
        <label for="floatingInput">Descripci贸n</label>
      </div>
    </div>
    <!-- Use a new line -->
    <div class="col-12">
      <div class="form-floating mb-3">
        <textarea
          class="form-control"
          id="comments"
          value=""
          placeholder="Comentario"
          name="comment"
          style="height: 200px"
        ></textarea>
        <label for="floatingInput">Comentario</label>
      </div>
    </div>

    <div class="col-12 d-grid">
      <button class="btn btn-primary" type="submit">Agregar</button>
    </div>
  </form>
</div>
<!-- Incluyo el footer de Bootstrap -->
<%- include('../partials/foot.ejs') %>
